# =====================================
# LITPER PRO - Environment Variables
# Copia este archivo a .env y configura los valores
# =====================================

# ==================== FRONTEND ====================
# Claude API Configuration (Primary AI Provider)
VITE_CLAUDE_API_KEY=your_claude_api_key_here

# Google Gemini API Configuration (Legacy - Optional)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
VITE_APP_NAME=Litper Pro Seguimiento
VITE_STORAGE_KEY=litper-shipments
VITE_STORAGE_EXPIRY_HOURS=24

# Feature Flags
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_IMAGE_ANALYSIS=true
VITE_ENABLE_AUDIO_TRANSCRIPTION=true

# ML Backend API Configuration
VITE_ML_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ==================== BACKEND ====================
# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=litper
DB_PASSWORD=your_secure_password_here
DB_NAME=litper_ml
DATABASE_URL=postgresql://litper:your_secure_password_here@localhost:5432/litper_ml

# Redis
REDIS_URL=redis://localhost:6379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ==================== AI / ML ====================
# Claude AI (Anthropic) - Backend
ANTHROPIC_API_KEY=sk-ant-api...

# OpenAI (alternativo)
OPENAI_API_KEY=sk-...

# ==================== WHATSAPP ====================
# Meta Official API (Recomendado)
META_WHATSAPP_TOKEN=your_meta_whatsapp_token
META_PHONE_NUMBER_ID=your_phone_number_id

# Twilio (Alternativo)
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886

# ==================== TRANSPORTADORAS ====================
# Coordinadora
COORDINADORA_API_KEY=your_coordinadora_api_key
COORDINADORA_NIT=your_nit

# Servientrega
SERVIENTREGA_USER=your_user
SERVIENTREGA_PASSWORD=your_password

# TCC
TCC_API_KEY=your_tcc_api_key

# Env√≠a
ENVIA_API_KEY=your_envia_api_key

# ==================== VOICE ====================
# Eleven Labs
ELEVEN_LABS_API_KEY=your_eleven_labs_key

# ==================== SECURITY ====================
SECRET_KEY=your_super_secret_key_change_in_production
